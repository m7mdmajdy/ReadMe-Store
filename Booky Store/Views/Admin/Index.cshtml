@model IEnumerable<UserRoles>
@{
	ViewData["title"] = "Users";
}
<h3>Users</h3>

<h5>Num of Users: @{
		UserCounter userCounter=@UserCounter.GetInstance();
	}@userCounter.count.ToString()</h5>
<table class="table table-striped mt-4">
	<thead>
		<tr class="bg-primary text-white">
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Roles</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var user in Model){
			<tr>
				<td>@user.FirstName</td>
				<td>@user.LastName</td>
				<td>@user.Email</td>
				<td>@string.Join(", ",user.Roles.ToList())</td>
				<td>
					<a class="btn btn-primary" asp-controller="Admin" asp-action="ManageRoles" asp-route-userId="@user.Id">Manage user Roles</a>
				</td>
				<td>
					<a class="btn btn-primary" asp-controller="Admin" asp-action="UserInfo" asp-route-userId="@user.Id">User Information</a>
				</td>
			</tr>
		}
	</tbody>
</table>