@model UserRolesViewModel

@{
	ViewData["title"] = "Manage Roles";
}


<form method="post">
	<div class="card mt-4">
		<div class="card-header">
			<h2>@Model.Email</h2>
			Add/Remove Roles
		</div>
		<div class="card-body">
			<input type="hidden" asp-for="UserId" />

			@for(int i=0;i<Model.UserRoles.Count;i++){
				<div class="form-check m-1">
					<input type="hidden"asp-for="@Model.UserRoles[i].Name">
					<input asp-for="@Model.UserRoles[i].IsSelected" class="form-check-input">
					<label class="form-check-label" asp-for="@Model.UserRoles[i].IsSelected">
						@Model.UserRoles[i].Name
					</label>
				</div>
			}
		</div>
		<div class="card-footer">
			<button type="submit" class="btn btn-primary">Save</button>
			<button asp-action="Index" class="btn btn-secondary">Cancel</button>
		</div>
	</div>
</form>